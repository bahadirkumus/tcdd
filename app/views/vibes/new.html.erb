<h1>Yeni Vibe Oluştur</h1>

<%= form_with model: @vibe, local: true do |form| %>
  <div class="form-group">
    <%= form.label :caption, "Açıklama" %>
    <%= form.text_field :caption, class: "form-control", placeholder: "Videonuz hakkında bir şeyler yazın..." %>
  </div>

  <div class="form-group mt-3">
    <%= form.label :video, "Video Yükle (Maks: 1080x1920, 30 saniye)" %>
    <%= form.file_field :video, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit "Vibe Oluştur", class: "btn btn-primary" %>
  </div>
<% end %>
