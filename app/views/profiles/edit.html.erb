<% provide(:title, "Edit Profile") %>
<h1>Edit Profile</h1>

<%= form_for(@user.profile, url: update_profile_user_path(@user.username), method: :patch) do |f| %>
  <%= render "shared/error_messages", resource: @user.profile %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :surname %><br />
    <%= f.text_field :surname %>
  </div>

  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday, start_year: 1900, end_year: Time.now.year %>
  </div>

  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, options_for_select([['Male', 'male'], ['Female', 'female'], ['Other', 'other']]) %>
  </div>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>

  <div class="field">
    <%= f.label :avatar_url %><br />
    <%= f.text_field :avatar_url %>
  </div>

  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>

  <div class="actions">
    <%= f.submit "Update Profile" %>
  </div>
<% end %>

<%= link_to "Back", user_path(@user.username), class: "btn btn-secondary" %>