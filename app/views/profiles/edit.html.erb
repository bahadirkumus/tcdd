<% provide(:title, "Edit Profile") %>
<div class="container mt-5">
  <h1 class="text-center mb-4">Edit Profile</h1>

  <div class="card shadow-sm p-4">
    <%= form_for(@user.profile, url: profile_path(@user.username), method: :patch, html: { class: "needs-validation", novalidate: true }) do |f| %>
      <%= render "layouts/shared/error_messages", resource: @user.profile %>

      <div class="row mb-3">
        <div class="col-md-6">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", autofocus: true %>
        </div>
        <div class="col-md-6">
          <%= f.label :surname, class: "form-label" %>
          <%= f.text_field :surname, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <%= f.label :birthday, class: "form-label" %>
          <%= f.date_select :birthday, { start_year: 1900, end_year: Time.now.year }, { class: "form-control" } %>
        </div>
        <div class="col-md-6">
          <%= f.label :gender, class: "form-label" %>
          <%= f.select :gender, options_for_select([['Male', 'male'], ['Female', 'female']]), {}, { class: "form-select" } %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :bio, class: "form-label" %>
        <%= f.text_area :bio, class: "form-control", rows: 4 %>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <%= f.label :avatar_url, class: "form-label" %>
          <%= f.text_field :avatar_url, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :location, class: "form-label" %>
          <%= f.text_field :location, class: "form-control" %>
        </div>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to "Back", user_path(@user.username), class: "btn btn-secondary px-4", data: { turbolinks: false } %>
        <%= f.submit "Update Profile", class: "btn btn-primary px-4" %>
      </div>
    <% end %>
  </div>
</div>
