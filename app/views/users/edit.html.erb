<% provide(:title, "Edit User Settings") %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Edit User Settings</h1>

  <div class="card shadow-sm p-4">
    <%= form_for(@user, url: user_path(@user.username), method: :patch, class: "needs-validation") do |f| %>
      <%= render "layouts/shared/error_messages", resource: @user %>

      <div class="mb-3">
        <%= f.label :username, class: "form-label" %>
        <%= f.text_field :username, class: "form-control", placeholder: "Enter your username" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", autocomplete: "email", placeholder: "Enter your email address" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
          <small class="text-muted">(Minimum <%= @minimum_password_length %> characters)</small>
        <% end %>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Enter new password" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Confirm new password" %>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, class: "form-label" %>
        <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password", placeholder: "Enter current password" %>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <%= f.submit "Update User Settings", class: "btn btn-primary px-4" %>
        <%= link_to "Back", user_path(@user.username), class: "btn btn-secondary px-4" %>
      </div>
    <% end %>
  </div>
</div>
