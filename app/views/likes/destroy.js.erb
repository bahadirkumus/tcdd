// Beğeni sayısını güncelle
document.getElementById("<%= tag.id("like-count-#{@likeable.id}") %>").innerHTML = "<%= pluralize(@likeable.likes.count, 'beğeni') %>";

// 'Beğeniyi Kaldır' butonunu 'Beğen' butonuna çevir
document.getElementById("<%= tag.id("like-button-#{@likeable.id}") %>").outerHTML = `
  <%= j(link_to "Beğen",
         polymorphic_path([@likeable, :likes]),
         method: :post, remote: true, class: "btn btn-sm btn-outline-primary",
         id: tag.id("like-button-#{@likeable.id}")) %>
`;
