<div class="row">
  <div class="col-md-2">
    <h5> Hi <%= @current_user.username %> </h5>
    <h4> Users </h4>
    <div>
      <%= turbo_stream_from "users" %>
      <div id="users">
        <%= render @users %>
      </div>
    </div>
    <h4> Chats </h4>
    <div>
      <%= turbo_stream_from "chats" %>
      <div id="chats">
        <%= render @chats %>
      </div>
    </div>
    <%= render partial: "form" %>
  </div>
  <div class="col-md-10 bg-dark">
    The chat box stays here
  </div>
</div>
